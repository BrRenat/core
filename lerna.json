{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": ["master"],
      "message": "chore(release): publish %s",
      "tagVersionPrefix": "$LERNA_PACKAGE_NAME-v"
    },
    "publish": {
      "tagVersionPrefix": "$LERNA_PACKAGE_NAME-v"
    }
  }
}
