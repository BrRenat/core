{
  "id": "redisCluster",
  "type": "object",
  "required": [ "hosts" ],
  "properties": {
    "hosts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [ "host", "port" ],
        "properties": {
          "host": {
            "type": "string"
          },
          "port": {
            "oneOf": [
              { "type": "integer" },
              { "type": "string" }
            ]
          }
        }
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "keyPrefix": {
          "type": "string"
        }
      }
    }
  }
}
